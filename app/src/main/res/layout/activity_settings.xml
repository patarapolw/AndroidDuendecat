<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    tools:context="com.blogspot.fossipol.duendecat.Settings">

    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:text="Hanzi level"
        app:layout_constraintBottom_toBottomOf="@id/level"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/level" />

    <EditText
        android:id="@+id/level"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/levelText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:text="Return to reviews"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ToggleButton
        android:id="@+id/reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        app:layout_constraintLeft_toLeftOf="@id/level"
        app:layout_constraintTop_toBottomOf="@id/level" />

    <TextView
        android:id="@+id/reverseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reverse"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/levelText"
        app:layout_constraintBottom_toBottomOf="@id/reverse"/>

    <ToggleButton
        android:id="@+id/speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        app:layout_constraintLeft_toLeftOf="@id/level"
        app:layout_constraintTop_toBottomOf="@id/reverse"/>

    <TextView
        android:id="@+id/speakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/levelText"
        app:layout_constraintBottom_toBottomOf="@id/speak"/>

</android.support.constraint.ConstraintLayout>
